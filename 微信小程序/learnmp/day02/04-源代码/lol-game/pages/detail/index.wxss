page{
  background-color: #363636;
  color: #fff;
  font-size: 12px;
}
swiper image{
  width: 100%;
}

.content{
  display: flex;
  margin:12px 10px 0;
}

.left{
  width: 191px;
}
.left .title{
  font-size: 14px;
}

.left .name{
  font-size: 20px;
  margin-top:4px;
}
.right{
  flex:1;
}
.tags{
  margin-top:12px;
}
.ability{
  margin-top: 18px;
}
.ability .item{
  display: flex;
  margin-top:2px;
}

.ability .item progress{
  width: 100px;
  margin-left:6px;
}
.tags text{
  width: 30px;
  height: 22px;
  line-height: 22px;
  background-color: #029b7f;
  display: inline-block;
  text-align: center;
  margin-right: 4px;
  border-radius: 4px;
}